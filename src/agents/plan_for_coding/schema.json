{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PlanForCodingOutput",
  "type": "object",
  "properties": {
    "milestones": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "title": {"type": "string"},
          "description": {"type": "string"}
        },
        "required": ["id", "title"],
        "additionalProperties": false
      }
    },
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "milestone_id": {"type": "string"},
          "description": {"type": "string"},
          "file_path": {"type": "string"},
          "estimate": {"type": "string"}
        },
        "required": ["id", "description"],
        "additionalProperties": false
      }
    },
    "risks": {
      "type": "array",
      "items": {"type": "string"}
    }
  },
  "required": [
    "milestones",
    "tasks",
    "risks"
  ],
  "additionalProperties": false
}
